<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/default_bg_gray">
    
    <com.lilun.passionlife.cloudplatform.custom_view.CircleImageView
        android:layout_width="118dp"
        android:layout_height="118dp"
        android:src="@drawable/app_icon"
        app:border_color="@color/default_bg_green"
        android:layout_marginTop="51dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
       >

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/username_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/usernameicon"/>

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:textColorHint="@color/default_tv_gray"
                android:hint="@string/moble_num"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center_vertical"
            android:layout_below="@id/ll1"
            android:background="@drawable/pwd_bg"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/pwd_icon"/>

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:maxLines="1"
                android:inputType="textPassword"
                android:layout_marginLeft="10dp"
                android:textColorHint="@color/default_tv_gray"
                android:hint="@string/login_pwd"
                />
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/login"
        android:textColor="@color/default_white"
        android:textSize="@dimen/title_size"
        android:background="@drawable/shape_corner_solid_green" />

    <Button
        android:id="@+id/regest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:text="@string/reg"
        android:textColor="@color/default_bg_green"
        android:textSize="@dimen/title_size"
        android:background="@drawable/shape_green" />

</LinearLayout>
